<launch>
    <param name ="/use_sim_time" value="true"/>

    <arg name="cam_height" default="0.1"/>

    <node name="static_orb_nav_tf" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 orb/map orb/odom 100" />

    <node name="orb_static_tf" pkg="tf" type="static_transform_publisher" args="0.15945 0 $(arg cam_height) -1.5707963 0 0 orb/odom orb/orb_odom 100" />
    <node name="robot_static_tf" pkg="tf" type="static_transform_publisher" args="0 $(arg cam_height) -0.15945 0.5 -0.5 0.5 0.5 orb/camera orb/base_link 100" />

    <node name="camera_static_tf" pkg="tf" type="static_transform_publisher" args="0.15945 0 $(arg cam_height) 0 0 0 orb/base_link d435_link 100" />


    <!-- ORB-SLAM3 -->
    <node name="orb_slam3_stereo_inertial" pkg="orb_slam3_ros_wrapper" type="orb_slam3_ros_wrapper_stereo_inertial" output="screen">
        <!-- for EuRoC dataset -->
        <remap from="/camera/left/image_raw"    to="/d435/infra1/image_rect_raw"/>
        <remap from="/camera/right/image_raw"   to="/d435/infra2/image_rect_raw"/>
        <remap from="/imu"                      to="/t265/imu"/>

        <!-- Parameters for original ORB-SLAM3 -->
        <param name="voc_file"      type="string"   value="/home/koksyuen/ORB_SLAM3/Vocabulary/ORBvoc.txt" />
        <param name="settings_file" type="string"   value="/home/koksyuen/fyp_ws/src/orb_slam3_ros_wrapper/config/RealSense_D435i.yaml" />
        <param name="do_rectify"    type="bool"     value="false" />
        <param name="do_equalize"   type="bool"     value="true" />
        <param name="localization_mode"   type="bool"     value="false" />
        <param name="save_trajectory_file" type="string"   value="/home/koksyuen/Documents/fyp_result/result/realsense_nav350_20220812/test5/orbslam3.txt" />


        <!-- Parameters for ROS -->
        <param name="map_frame_id"  type="string"   value="orb/orb_odom" />
        <param name="pose_frame_id" type="string"   value="orb/camera" />
    </node>

    <!-- Convert TF to Pose -->
    <node pkg="orb_slam3_ros_wrapper" type="pose_publisher" name="orb_pose_publisher" output="screen">
        <param name="publish_frequency" value="30.0" />
        <param name="map_frame" value="orb/odom" />
        <param name="base_frame" value="orb/base_link" />
        <param name="topic_name" value="orb_pose" />
    </node>

    <!-- Visualization - RViz-->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find orb_slam3_ros_wrapper)/config/navi.rviz" output="screen" />

    <node pkg="hector_trajectory_server" type="hector_trajectory_server" name="trajectory_server_orb_slam3" output="screen" ns="orb_slam3_ros" >
        <param name="/target_frame_name" value="orb/odom" />
        <param name="/source_frame_name" value="orb/base_link" />
        <param name="/trajectory_update_rate" value="20.0" />
        <param name="/trajectory_publish_rate" value="20.0" />
    </node>

</launch>
