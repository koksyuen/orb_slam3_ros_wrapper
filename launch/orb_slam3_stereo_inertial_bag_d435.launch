<launch>
    <param name ="/use_sim_time" value="true"/>

    <node name="orb_static_tf" pkg="tf" type="static_transform_publisher" args="0 0 0 0.5 0.5 0.5 0.5 odom orb_odom 100" />
    <node name="robot_static_tf" pkg="tf" type="static_transform_publisher" args="0 0 0 0.5 0.5 0.5 -0.5 camera base_link 100" />

    <!-- ORB-SLAM3 -->
    <node name="orb_slam3_stereo_inertial" pkg="orb_slam3_ros_wrapper" type="orb_slam3_ros_wrapper_stereo_inertial" output="screen">
        <!-- for EuRoC dataset -->
        <remap from="/camera/left/image_raw"    to="/d435/infra1/image_rect_raw"/>
        <remap from="/camera/right/image_raw"   to="/d435/infra2/image_rect_raw"/>
        <remap from="/imu"                      to="/t265/imu"/>

        <!-- Parameters for original ORB-SLAM3 -->
        <param name="voc_file"      type="string"   value="/home/koksyuen/ORB_SLAM3/Vocabulary/ORBvoc.txt" />
        <param name="settings_file" type="string"   value="/home/koksyuen/fyp_ws/src/orb_slam3_ros_wrapper/config/RealSense_D435i.yaml" />
        <param name="do_rectify"    type="bool"     value="false" />
        <param name="do_equalize"   type="bool"     value="true" />

        <!-- Parameters for ROS -->
        <param name="map_frame_id"  type="string"   value="orb_odom" />
        <param name="pose_frame_id" type="string"   value="camera" />
    </node>

    <!-- Visualization - RViz-->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find orb_slam3_ros_wrapper)/config/orb_slam3_wrapper.rviz" output="screen" />

    <node pkg="hector_trajectory_server" type="hector_trajectory_server" name="trajectory_server_orb_slam3" output="screen" ns="orb_slam3_ros" >
        <param name="/target_frame_name" value="/odom" />
        <param name="/source_frame_name" value="/base_link" />
        <param name="/trajectory_update_rate" value="20.0" />
        <param name="/trajectory_publish_rate" value="20.0" />
    </node>

    <!-- Convert TF to Pose -->
    <node pkg="pose_publisher" type="pose_publisher" name="orb_pose_publisher" output="screen">
        <param name="publish_frequency" value="10.0" />
        <param name="map_frame" value="odom" />
        <param name="base_frame" value="base_link" />
    </node>
</launch>
